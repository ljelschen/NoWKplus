{
  "manifest_version": 3,
  "name": "NoWKplus",
  "description": "Remove the Weserkurier Plus paywall",
  "version": "1.0",
  "author": "Lars Jelschen",
  
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.weser-kurier.de/*"],
      "js": ["noWKplus.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"] 
  }
  